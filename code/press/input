&params smallh_g    = 0.05	! aspect-ratio of gas layer 
        rhog0_power =-1.5d0  	! power law for mid-plane gas density
	smallq      =-1.0d0      	! power law for imposed radial temperature profile 
        vstruct     = 'mlin'    ! vertical structure type: tl02 = takeuchi \& lin 2002; 'mlin': my eqm 
	Hd          = 0.4   	! characteristic dust layer thickness, in Hg 
	Zmetal      = 0.01  	! metalicity 
        fixZ        = .true.   ! true: input metalicity, get dgratio = Zmetal/Hd; false: dgratio = Zmetal 
	smalld      = 0d0 	! negative of the radial power law for imposed dust-to-gas ratio profile	
        tstop       = 0.02    / ! stopping time at the midplane 
&grid   zmax        = 1.0       ! vertical domain size in Hg
	nz          = 513   /   ! grid numbers = chebyshev resolution   
&mode   krad        = 7.8539815   /   ! radial wavenumber normalized by Hg 
